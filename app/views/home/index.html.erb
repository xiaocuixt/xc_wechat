<button>分享</button>

<%= content_for :weixin_api do %>
  <script type="text/javascript">
    $("button").click(function(){
      wx.ready(function () {
        wx.onMenuShareTimeline({
          title: '快分享我把', // 分享标题
          link: 'http://www.baidu.com', // 分享链接
          imgUrl: '', // 分享图标
          success: function () {
            alert("分享成功");
              // 用户确认分享后执行的回调函数
          },
          cancel: function () {
            alert("分享失败");
              // 用户取消分享后执行的回调函数
          }
        });
      });
    });
  </script>
<% end %>